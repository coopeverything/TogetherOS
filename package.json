{
  "name": "togetheros",
  "version": "0.0.0",
  "private": true,
  "description": "TogetherOS - Cooperation-first operating system stack",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build && npm run build:web",
    "build:web": "npm run build --workspace=@togetheros/web",
    "build:packages": "tsc --build packages/types packages/validators packages/ui",
    "clean": "tsc --build --clean",
    "dev": "npm run dev --workspace=@togetheros/web",
    "lint": "npm run lint --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:mutation": "stryker run",
    "test:packages": "vitest run --config vitest.config.ts",
    "test:web": "npm run test --workspace=@togetheros/web",
    "test:e2e": "playwright test",
    "test:e2e:synthetic": "playwright test tests/e2e/synthetic",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:contract": "vitest run tests/contract/consumer",
    "test:contract:verify": "vitest run tests/contract/provider",
    "test:contract:all": "npm run test:contract && npm run test:contract:verify",
    "typecheck": "tsc --build --dry",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.29.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^16.0.2",
    "@playwright/test": "^1.57.0",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/vitest-runner": "^9.4.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "fast-check": "^4.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
