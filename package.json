{
  "name": "togetheros",
  "version": "0.0.0",
  "private": true,
  "description": "TogetherOS - Cooperation-first operating system stack",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build && npm run build:web",
    "build:web": "npm run build --workspace=@togetheros/web",
    "build:packages": "tsc --build packages/types packages/validators packages/ui",
    "clean": "tsc --build --clean",
    "dev": "npm run dev --workspace=@togetheros/web",
    "lint": "npm run lint --workspaces --if-present",
    "test": "echo 'Test script placeholder - configure with Jest'",
    "typecheck": "tsc --build --dry"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
