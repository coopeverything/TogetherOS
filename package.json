{
  "name": "togetheros",
  "version": "0.0.0",
  "private": true,
  "description": "TogetherOS - Cooperation-first operating system stack",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build && npm run build:web",
    "build:web": "npm run build --workspace=@togetheros/web",
    "build:packages": "tsc --build packages/types packages/validators packages/ui",
    "clean": "tsc --build --clean",
    "dev": "npm run dev --workspace=@togetheros/web",
    "lint": "npm run lint --workspaces --if-present",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:packages": "vitest run --config vitest.config.ts",
    "test:web": "npm run test --workspace=@togetheros/web",
    "typecheck": "tsc --build --dry"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.1.0",
    "jsdom": "^27.0.1",
    "typescript": "^5.0.0",
    "vitest": "^4.0.5"
  }
}
