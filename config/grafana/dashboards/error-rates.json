{
  "dashboard": {
    "title": "TogetherOS Error Rates",
    "tags": ["togetheros", "errors", "slo"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "changes(togetheros_deployment_timestamp[1m]) > 0",
          "tagKeys": "version",
          "titleFormat": "Deployment"
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Error Rate (per minute)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(application_errors_total{job=\"togetheros-app\"}[1m])) * 60",
            "legendFormat": "Total Errors/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 5 },
                { "color": "red", "value": 10 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Error Rate by Severity",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "sum(rate(application_errors_total{job=\"togetheros-app\"}[5m])) by (severity) * 60",
            "legendFormat": "{{severity}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "HTTP Error Rate (4xx/5xx)",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"togetheros-app\", status=~\"4..\"}[5m])) * 60",
            "legendFormat": "4xx Errors/min"
          },
          {
            "expr": "sum(rate(http_requests_total{job=\"togetheros-app\", status=~\"5..\"}[5m])) * 60",
            "legendFormat": "5xx Errors/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "orange", "value": 1 },
                { "color": "red", "value": 5 }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Error Rate by Route",
        "type": "table",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "topk(10, sum(rate(http_requests_total{job=\"togetheros-app\", status=~\"[45]..\"}[1h])) by (route))",
            "legendFormat": "{{route}}",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": { "Time": true },
              "renameByName": { "route": "Route", "Value": "Errors/hour" }
            }
          }
        ]
      },
      {
        "id": 5,
        "title": "Error Budget Remaining",
        "description": "SLO: <10 errors/hour (99.9% availability)",
        "type": "gauge",
        "gridPos": { "h": 6, "w": 6, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "1 - (sum(increase(application_errors_total{job=\"togetheros-app\"}[1h])) / 10)",
            "legendFormat": "Budget Remaining"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "orange", "value": 0.25 },
                { "color": "yellow", "value": 0.5 },
                { "color": "green", "value": 0.75 }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Total Errors (24h)",
        "type": "stat",
        "gridPos": { "h": 6, "w": 6, "x": 6, "y": 16 },
        "targets": [
          {
            "expr": "sum(increase(application_errors_total{job=\"togetheros-app\"}[24h]))",
            "legendFormat": "Total"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 100 },
                { "color": "red", "value": 240 }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Success Rate",
        "type": "stat",
        "gridPos": { "h": 6, "w": 6, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "1 - (sum(rate(http_requests_total{job=\"togetheros-app\", status=~\"[45]..\"}[1h])) / sum(rate(http_requests_total{job=\"togetheros-app\"}[1h])))",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "decimals": 3,
            "thresholds": {
              "steps": [
                { "color": "red", "value": null },
                { "color": "orange", "value": 0.99 },
                { "color": "yellow", "value": 0.995 },
                { "color": "green", "value": 0.999 }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Recent Errors",
        "type": "logs",
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 22 },
        "targets": [
          {
            "expr": "{job=\"togetheros-app\"} |= \"error\" | json",
            "datasource": "Loki"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "wrapLogMessage": true
        }
      }
    ]
  }
}
