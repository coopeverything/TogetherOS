{
  "dashboard": {
    "title": "TogetherOS Overview",
    "tags": ["togetheros", "overview"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"togetheros-app\"}[5m])",
            "legendFormat": "{{method}} {{route}} {{status}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Request Duration (p95)",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"togetheros-app\"}[5m]))",
            "legendFormat": "{{method}} {{route}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"togetheros-app\"}",
            "legendFormat": "RSS Memory"
          },
          {
            "expr": "nodejs_heap_size_used_bytes{job=\"togetheros-app\"}",
            "legendFormat": "Heap Used"
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "rate(application_errors_total{job=\"togetheros-app\"}[5m])",
            "legendFormat": "{{severity}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Active Connections",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        },
        "targets": [
          {
            "expr": "active_connections{job=\"togetheros-app\"}"
          }
        ]
      },
      {
        "id": 6,
        "title": "CPU Usage",
        "type": "gauge",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        },
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"togetheros-app\"}[1m])"
          }
        ]
      }
    ]
  }
}
