{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["../../lib/*"],
      "@togetheros/db": ["../../packages/db/src"],
      "@togetheros/types": ["../../packages/types/src"],
      "@togetheros/types/*": ["../../packages/types/src/*"],
      "@togetheros/validators": ["../../packages/validators/src"],
      "@togetheros/validators/*": ["../../packages/validators/src/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"],
  "references": [
    { "path": "../../packages/db" },
    { "path": "../../packages/types" },
    { "path": "../../packages/validators" }
  ]
}
